extends ./layout/layout
block contant
    .container.mt-5
        table#dtBasicExample.table.table-striped.table-bordered(cellspacing='0' width='100%')
            thead
                tr
                th.th-sm no
                th.th-sm Pruduct name
                th.th-sm Price
                th.th-sm Amount
                th.th-sm Total
                th.th-sm action
            tbody
                if items
                    each item, index in items
                        tr
                            td= index + 1
                            td= item.name
                            td= item.price + '$'
                            form(method="POST")
                                td
                                    input.form-control.form-control-sm(type="number" value=item.amount name="amount")
                                td= (item.price * item.amount) + '$'
                                td
                                    input(type="hidden" name='cartId' value="item._id")
                                    input.btn.btn-success.btn-sm(type="submit" value="Save" formaaction='/cart/save')
                                    input.btn.btn-danger.btn-sm(type="submit" value="Delete" formaaction='/cart/delete')
                            
                
