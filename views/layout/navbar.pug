nav.navbar.navbar-expand-md.navbar-dark.cyan
    .container
        a.navbar-brand(href='/') Online Shop
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#basicExampleNav', aria-controls='basicExampleNav', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #basicExampleNav.collapse.navbar-collapse
            ul.navbar-nav.ml-auto
                
                li.nav-item(class=title === 'home' ? 'active' : '' )
                    a.nav-link(href='/') Home
                if isUser
                    li.nav-item(class=title === 'cart' ? 'active' : '')
                        a.nav-link(href='/cart') Cart
                    li.nav-item( class=title === 'orders' ? 'active' : '')
                        a.nav-link(href='/orders') Orders
                else
                    li.nav-item( class=title === 'login' ? 'active' : '')
                        a.nav-link(href='/login') Login
                    li.nav-item(class=title === 'sinup' ? 'active' : '')
                        a.nav-link(href='/singup' ) Singup
                if isAdmin
                    li.nav-item(class=title === 'add-products' ? 'active' : '')
                        a.nav-link(href='/admin/add') add product
                    li.nav-item.mr-5(class=title === 'product manage' ? 'active' : '')
                        a.nav-link(href='/admin/orders')  managa orders
                if isUser
                    li.nav-item
                        form(action="/logout", method="POST")
                            input.btn.btn-sm.btn-danger(type="submit", value="Logout")