extends ./layout/layout
block contant
   .container.mt-5
        .row
            each product in products
                .col.col-12.col-md-6.col-lg-4.col-xl-3
                    .card
                        img.card-img-top(src='/' + product.image alt='Card image cap')
                        .card-body
                            h4.card-title
                                a(href="/product/#product._id")= product.name
                            p.card-text= product.price
                            form(action="" method="method")
                                input.form-control.form-control-sm(type="number" )
                                input.btn.btn-cyan.btn-sm(tupe="submit" , value="add to cart")